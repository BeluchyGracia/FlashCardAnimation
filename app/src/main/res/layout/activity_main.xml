 <TextView
     android:id="@+id/flashcard_answer"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/flashcard_question"
     android:layout_marginTop="187dp"
     android:background="#FFC79F"
     android:gravity="center"
     android:textColor="#0000FF"
     android:textSize="24sp" />

 <TextView
     android:id="@+id/flashcard_answer2"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/flashcard_answer"
     android:layout_marginTop="65dp"
     android:background="#FFC79F"
     android:gravity="center"
     android:textColor="#0000FF"
     android:textSize="24sp" />

 <TextView
     android:id="@+id/flashcard_answer3"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/flashcard_answer2"
     android:layout_marginTop="74dp"
     android:background="#FFC79F"
     android:gravity="center"
     android:textColor="#0000FF"
     android:textSize="24sp" />

 <ImageView
     android:id="@+id/pbtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     app:srcCompat="@drawable/plus_foreground" />

 <ImageView
     android:id="@+id/editBtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     app:srcCompat="@drawable/edit_foreground" />


 <ImageView
     android:id="@+id/rightbtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentBottom="true"
     android:layout_marginLeft="295dp"
     android:layout_marginBottom="403dp"
     app:srcCompat="@drawable/right_foreground" />

 <ImageView
     android:id="@+id/poubtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentBottom="true"
     android:layout_marginLeft="133dp"
     android:layout_marginBottom="394dp"
     app:srcCompat="@drawable/poubelle_foreground" />

 <TextView
     android:id="@+id/time"
     android:layout_width="match_parent"
     android:layout_below="@id/flashcard_question"
     android:layout_height="50dp"
     android:gravity="center"
     android:text=""
     android:textSize="20sp" />

 <nl.dionsegijn.konfetti.xml.KonfettiView
     android:id="@+id/konfettiView"
     android:layout_width="match_parent"
     android:layout_height="match_parent" />

</RelativeLayout>